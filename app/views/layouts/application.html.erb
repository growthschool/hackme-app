<!DOCTYPE html>
<html>
  <head>
    <title>Rails Security Example</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">


      <!-- Static navbar -->
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">全栈营 Rails Security 范例前台</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="active"><%= link_to "活動一覽", events_path %></li>
              <li><%= link_to "商品一覽", products_path %></li>
              <li>
                 <%= link_to cart_path do  %>
                    购物车 <i class="fa fa-shopping-cart"> </i> ( <%= current_cart.products.count %> )
                 <% end %>
               </li>
            </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <span class="glyphicon glyphicon-user"></span>
                  <%= current_user.display_name %>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <% if current_user && current_user.is_admin? %>
                    <li><%= link_to('管理員面板', admin_events_path) %></li>
                  <% end %>

                  <li><%= link_to('修改個人資料', edit_user_path(current_user)) %></li>
                  <li><%= link_to('修改密碼', edit_registration_path(:user)) %></li>
                  <li><%= link_to('登出', destroy_user_session_path, :method => :delete) %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to('註冊', new_registration_path(:user)) %></li>
              <li><%= link_to('登入', new_session_path(:user)) %></li>
            <% end %>
          </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>


      <%= yield %>
    </div>
  </body>
</html>
